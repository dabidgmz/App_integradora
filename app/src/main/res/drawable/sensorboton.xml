<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:angle="0"
                android:endColor="@color/sombra"
                android:startColor="@android:color/transparent"
                android:type="linear" />
            <corners
                android:radius="30dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp" />
        </shape>
    </item>
    <item android:right="4dp">
        <shape>
            <solid android:color="@color/cuadrosen" />
            <corners
                android:radius="30dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp" />
            <stroke
                android:width="2dp"
                android:color="@color/cuadrosen" />
        </shape>
    </item>
</layer-list>