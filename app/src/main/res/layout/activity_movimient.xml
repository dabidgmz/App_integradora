<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#FDEE55"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="311dp"
        android:layout_height="250dp"
        app:srcCompat="@drawable/sensormov"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="158dp"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="373dp"
        android:layout_height="72dp"
        android:text="Estado: Activo"
        android:textSize="45sp"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="477dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="377dp"
        android:layout_height="179dp"
        android:text="No se ha detectado movimiento en la vitrina"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="623dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensor de movimiento"
        android:textSize="45sp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="82dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>