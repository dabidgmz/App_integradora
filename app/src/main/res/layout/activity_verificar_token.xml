<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".verificar_token">

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/txtver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/verifique_su_token"
        android:layout_below="@id/imageViewLogo"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/token"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtver"
        android:hint="Ingresa tu token"
        android:inputType="number"
        android:maxLength="10"
    android:text=""/>


    <Button
        android:id="@+id/btnverifique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/token"
        android:text="verifique"
        android:textColor="@color/black"
        android:backgroundTint="@color/amarillo_pollito"
        android:layout_marginTop="40dp"/>
</RelativeLayout>